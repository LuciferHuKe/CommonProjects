<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMainImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图片处理"/>

            <Button
                android:id="@+id/btnMainBadge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BadgeView视图"/>

            <Button
                android:id="@+id/btnMainReveal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reveal视图"/>

            <Button
                android:id="@+id/btnMainLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载动画"/>

            <Button
                android:id="@+id/btnMainEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EditText输入框"/>

            <Button
                android:id="@+id/btnMainPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="百分比布局"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
