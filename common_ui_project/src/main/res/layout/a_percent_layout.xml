<?xml version="1.0" encoding="utf-8"?>
<com.lucifer.ui.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lucifer.ui.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_paddingBottomPercent="10%w"
            app:layout_paddingTopPercent="10%w">

            <com.lucifer.ui.percent.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ff44aacc"
                app:layout_heightPercent="20%w"
                app:layout_widthPercent="100%w">

            </com.lucifer.ui.percent.PercentRelativeLayout>

            <com.lucifer.ui.percent.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffcc5ec7"
                app:layout_heightPercent="50%w"
                app:layout_marginTopPercent="10%w"
                app:layout_widthPercent="50%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:background="#ff7ecc16"
                    android:text="Hello World"
                    app:layout_heightPercent="50%"
                    app:layout_textSizePercent="10%w"
                    app:layout_widthPercent="50%" />

            </com.lucifer.ui.percent.PercentRelativeLayout>

            <com.lucifer.ui.percent.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:background="#ff3322"
                android:orientation="vertical"
                app:layout_heightPercent="60%w"
                app:layout_marginPercent="10%w"
                app:layout_paddingPercent="10%w"
                app:layout_widthPercent="80%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="This is the text percent content "
                    app:layout_heightPercent="10%"
                    app:layout_widthPercent="80%" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="This is the text percent content 222"
                    app:layout_heightPercent="10%"
                    app:layout_marginTopPercent="10%"
                    app:layout_widthPercent="80%" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="This is the text percent content 333"
                    app:layout_heightPercent="10%"
                    app:layout_marginTopPercent="10%"
                    app:layout_widthPercent="80%" />

            </com.lucifer.ui.percent.PercentLinearLayout>

            <com.lucifer.ui.percent.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#ff4490"
                app:layout_heightPercent="40%h"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="100%w">

            </com.lucifer.ui.percent.PercentRelativeLayout>

        </com.lucifer.ui.percent.PercentLinearLayout>

    </ScrollView>

</com.lucifer.ui.percent.PercentFrameLayout>