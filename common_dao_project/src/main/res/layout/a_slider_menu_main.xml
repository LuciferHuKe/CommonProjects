<?xml version="1.0" encoding="utf-8"?>
<com.lucifer.dao.ui.SliderMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smMain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- main content-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#44ff0000">

        <TextView
            android:id="@+id/tvSMContentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Hell EveryOne"/>

    </RelativeLayout>
    
    <!-- menu -->
    <FrameLayout
        android:id="@+id/flSliderMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</com.lucifer.dao.ui.SliderMenuLayout>